<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}</title>
  <meta name="description" content="{{ page_description | escape }}">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="{{ 'framer_2025-11-02_12-31-18_8156.webp' | asset_url }}">
  
  <!-- Stylesheets -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  
  <!-- Meta Tags -->
  {% if template contains 'product' %}
    <meta property="og:type" content="product">
    <meta property="og:title" content="{{ product.title }}">
    <meta property="og:description" content="{{ product.description | strip_html | truncatewords: 20 }}">
    <meta property="og:image" content="{{ product.featured_image | img_url: '1200x1200' }}">
  {% endif %}
  
  <!-- Shopify Head -->
  {{ content_for_header }}
</head>
<body>
  <!-- Header Navigation -->
  <header>
    <div class="header-content">
      <div class="logo">
        <a href="/">FARTHER WEST</a>
      </div>
      <nav>
        <ul>
          <li><a href="/collections/all">Shop</a></li>
          <li><a href="/pages/about">About</a></li>
          <li><a href="/pages/contact">Contact</a></li>
          <li><a href="/cart">Cart</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Upper Ticker Banner -->
  <div class="ticker-banner">
    <div class="ticker-content">
      <span>{{ section.settings.promo_text | default: 'Launch party! 20% off WITH CODE FW20' }}</span>
    </div>
  </div>

  <!-- Main Content -->
  <main>
    {{ content_for_layout }}
  </main>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>Shop</h3>
          <ul>
            <li><a href="/collections/all">All Products</a></li>
            <li><a href="/collections/new">New Collection</a></li>
            <li><a href="/collections/best-sellers">Best Sellers</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h3>Company</h3>
          <ul>
            <li><a href="/pages/about">About Us</a></li>
            <li><a href="/pages/contact">Contact</a></li>
            <li><a href="/pages/shipping">Shipping Info</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h3>Support</h3>
          <ul>
            <li><a href="/pages/faq">FAQ</a></li>
            <li><a href="/pages/returns">Returns</a></li>
            <li><a href="/pages/privacy">Privacy Policy</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h3>Connect</h3>
          <ul>
            <li><a href="#">Instagram</a></li>
            <li><a href="#">Facebook</a></li>
            <li><a href="#">Twitter</a></li>
          </ul>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {{ 'now' | date: '%Y' }} Farther West Co. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- Theme JavaScript -->
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
</body>
</html>
